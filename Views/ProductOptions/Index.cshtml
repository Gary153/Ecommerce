            @Html.DisplayNameFor(model => model.OptionPriceIncrement)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Option.OptionName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OptionGroup.OptionGroupName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OptionPriceIncrement)
        </td>
